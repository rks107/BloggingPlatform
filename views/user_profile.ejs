<link rel="stylesheet" href="<%= assetPath('css/users_profile.css') %>">



<div class="container">
    <div class="profile">
        <h3><%= locals.user.name %> </h3>
        <h3><%= locals.user.email %> </h3>
        <a href="/users/delete">
        <button class="btn btn__delete">Delete Account</button>
        </a>
    </div>
    <div class="blog">
        <div class="blog__form">
            <p class="headline">POST YOUR BLOG HERE</p>
            <form action="/blog/create" method="post">
                <input type="text" name="title" placeholder="Blog Title"><br>
                <textarea name="text" cols="30" rows="10" placeholder="Write your blog here..."></textarea>
                <button class="btn btn__blog" type="submit">Submit</button>
            </form>
        </div>
        <div class="personal__blog">
            <p class="headline">PREVIOUS BLOGS</p>
            <% if(blogs.length == 0) {%> 
                <h3 style="text-align: center; font-weight: bolder; color: blue;" > You Have 0 Blog.</h3>
            <% }else{ %> 

                <% for(blog of blogs){%>
                <%- include('blog') -%> 
                <%}%>

             <% } %>  
            
        </div>
    </div>
</div>